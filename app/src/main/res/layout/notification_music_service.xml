<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/music_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/music_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是歌名"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/music_image"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/music_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是歌手"
            android:textSize="10dp"
            android:textColor="#99000000"
            android:layout_toRightOf="@+id/music_image"
            android:layout_below="@+id/music_song"
            android:layout_marginLeft="12dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="48dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/music_previous"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_previous_music_select"/>

        <ImageView
            android:id="@+id/music_switch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"/>


        <ImageView
            android:id="@+id/music_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/icon_next_music_select"/>

    </RelativeLayout>



</LinearLayout>